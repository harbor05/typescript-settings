{
    "compilerOptions": {
      "outDir": "./dist",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6",
      "lib": ["dom", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"],
      "jsx": "preserve",
      "allowJs": true,
      "baseUrl": ".",
      "paths": {
        "components/*": ["./src/components/*"]
      },
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
  }
  